{
  "display_information": {
    "name": "Wordle",
    "description": "Daily Wordle puzzle for your Slack team",
    "background_color": "#121213"
  },
  "features": {
    "bot_user": {
      "display_name": "Wordle Bot",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/wordle",
        "description": "Play today's Wordle or view stats/leaderboard",
        "usage_hint": "[stats|leaderboard]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "users:read"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://slack-wordle.onrender.com/slack/interactions"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false
  }
}
